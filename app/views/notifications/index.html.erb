<% provide(:title, "Notifications") %>
<div class="form">
	<div class="head small">
		<h3>
			<i class="icon icon-globe"></i> Notifications
		</h3>
	</div>
	<div class="box">
		
		<% if @notifications.any? %>
		<ul id="notifications">
			<%= render @notifications %>
		</ul>
		<% else %>
		<%= render 'shared/empty', :title => "You have no notifications", :caption => 'Check back soon.' %>
		<% end %>
		
		<%= will_paginate @notifications %>
		
	</div>
</div>

