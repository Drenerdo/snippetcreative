<% provide(:title, @offer.job.position) %>
<div class="form">
	<div class="head small">
		<h3>
			<i class="icon icon-briefcase"></i> You were offered a <%= link_to @offer.job.position, @offer.job %> position by <%= link_to @offer.job.user.name, @offer.job.user %> <%= time_ago_in_words(@offer.created_at) %> ago.
		</h3>
	</div>
	<div class="box">
	
		<div class="offer">
			<h3>Reply to <%= @offer.job.user.username %> &raquo;</h3>
			<%= render 'messages/form', :remote_off => true %>
			
		</div>
		
	</div>
</div>

