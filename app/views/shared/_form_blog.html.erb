<div class="span6 offset3">
  <%= form_for(@blog) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
    	<%= f.label :title %>
    	<%= f.text_field :title %>

    	<%= f.label :content %>
    	<%= f.text_area :content %>

    	<%= f.submit "Post", class: "btn btn-large btn-success" %>
  <% end %>
</div>