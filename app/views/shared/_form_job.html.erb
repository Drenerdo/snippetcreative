
  <%= form_for(@job) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
    	<%= f.text_field :position, placeholder: 'Position' %>

    	<%= f.text_area :description, placeholder: 'Description' %>
		
		<%= text_field :tags, :tags, :placeholder => "Add tags (separated by commas)" if @job.new_record? %>
		
		
    	<%= f.submit :class => "btn btn-large btn-primary" %>
  <% end %>
<div class="formtags"><%= render 'shared/form_tag', :object => @job, :tag => @tag unless @job.new_record? %></div>
<%= render 'tags/tags', :object => @job unless @job.new_record? %>


	