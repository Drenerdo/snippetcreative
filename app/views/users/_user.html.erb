<li class="span6">
    <div class="box">
        <div class="user">
            <%= image_tag user.picture.url(:tiny) %>
            <div class="info">
                <h2><%= link_to user.name, user %></h2>
                <h3><%= user.username %></h3>
            </div>
            <div class="pull-right" data-user="<%= user.id %>">
            <%= render 'users/relationship', :user => user unless current_user?(user) %>
            </div>
        </div>
    </div>  
    <div class="boxshadow"></div>
</li>